server {
    server_name '{DOMAIN_NAME}';
    listen 80;

    valid_referers server_names '{VALID_REFERERS}';

    if ($invalid_referer) {
        return 403;
    }

    location / {
      include uwsgi_params;
      client_max_body_size 2M;
      uwsgi_pass unix:'{SOCKET}';
    }
}
